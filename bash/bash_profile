if [[ -z "$ZSH" ]]
then
    if [ "$PS1" ]
    then
        if [ -f /etc/bash_completion ]
        then
            if [ -r /etc/bash_completion ]
            then
                . /etc/bash_completion
            fi
        fi
    fi
fi

if [ -f ~/.markrc ]; then
        . ~/.markrc
fi


function run_cmd_with_password {
    expect -c "\
    set timeout 90
    set env(TERM)
    spawn $1
    expect \"password:\"
    send $2\r
    expect eof
  "
}

function interact_cmd_with_password 
{
    expect -c "\
    set timeout 90
    set env(TERM)
    spawn $1
    expect \"password:\"
    send $2\r
    interact
  "
}

platform='unknown'
unamestr=`uname`
if [[ "$unamestr" == 'Linux' ]]; then
    platform='linux'
elif [[ "$unamestr" == 'FreeBSD' ]]; then
    platform='freebsd'
elif [[ "$unamestr" == 'Darwin' ]]; then
    platform="osx"
fi

export PATH=$PATH::~/bin:~/local/bin:/usr/local/bin:/usr/local/sbin:/usr/bin:/bin:/usr/sbin:/sbin
export PATH="/usr/local/opt/coreutils/libexec/gnubin:$PATH"
export PATH=$PATH:$HOME/.rvm/bin # Add RVM to PATH for scripting 

if [[ "$platform" == "osx" ]];then
    export PATH=/Applications/MacVim.app/Contents/MacOS:$PATH
    export PATH="$(brew --prefix josegonzalez/php/php55)/bin:$PATH"
    alias service="brew services"
    export PATH=$PATH:/Users/zhqm03/apps/adt/sdk/tools:/Users/zhqm03/apps/adt/sdk/platform-tools
    export PATH=/usr/local/Cellar/php/5.3.10/bin:$PATH
    export PATH=/usr/local/Cellar/gettext/0.18.3.2/bin:$PATH
    export PATH=/usr/local/share/npm/bin:$PATH
fi
export PATH=/usr/local/bin:$PATH
